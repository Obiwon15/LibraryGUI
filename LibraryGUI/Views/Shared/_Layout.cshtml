<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Librarium</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/css/site.css" />
        <link rel="stylesheet" href="~/css/style.css" />
        <link rel="stylesheet" href="~/css/fixed.css" />

        <!-- Favicon -->
        <link href="~/images/favicon.ico" rel="icon" type="image/x-icon" />

        <!-- Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i%7CLato:100,100i,300,300i,400,400i,700,700i,900,900i" rel="stylesheet" />
        @*<link href="css/font-awesome.min.css" rel="stylesheet" type="text/css" />*@

    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-inverse bg-dark navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                    <span class="icon icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">Librarium</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right ml-auto">
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-link">Home</a></li>
                    @*<li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="About" class="navbar-link">About</a></li>*@
                    <li class="nav-item"><a asp-area="" asp-controller="Books" asp-action="Index" class="navbar-link">Books</a></li>
                    @*@await Component.InvokeAsync("CategoryMenu")*@
                    <li class="nav-item"><a asp-area="" asp-controller="Role" asp-action="Index" class="navbar-link">Roles</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Index" class="navbar-link">Account</a></li>
                    @*<li class="nav-item"><a asp-area="" asp-controller="Customers" asp-action="Index" class="navbar-link">Customers</a></li>*@
                    <li class="nav-item"><a asp-area="" asp-controller="Home" asp-action="Contact" class="navbar-link">Contact</a></li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <partial name="_CookieConsentPartial" />

